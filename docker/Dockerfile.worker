FROM maxutility2011/ezlivestreaming_baseimage:v5

USER streamer

RUN mkdir /home/streamer/bin \
    && mkdir /home/streamer/src \
    && mkdir /home/streamer/conf \
    && cd /home/streamer/src/ \
    && git clone https://github.com/maxutility2011/ezLiveStreaming.git 

RUN cd /home/streamer/src/ezLiveStreaming/worker/app \
    && /usr/local/go/bin/go build worker_app.go \
    && cp /home/streamer/src/ezLiveStreaming/worker/app/worker_app /home/streamer/bin/ \
    && cp /home/streamer/src/ezLiveStreaming/worker/app/worker_app_config.json /home/streamer/conf/worker_app_config.json

RUN cd /home/streamer/src/ezLiveStreaming/worker/transcoder \
    && /usr/local/go/bin/go build worker_transcoder.go \
    && cp /home/streamer/src/ezLiveStreaming/worker/transcoder/worker_transcoder /home/streamer/bin/ \
    && cp /home/streamer/src/ezLiveStreaming/worker/transcoder/packager /home/streamer/bin/

RUN sudo apt install ffmpeg -y

ENV PATH="${PATH}:/home/streamer/bin"

EXPOSE 1080
EXPOSE 4080

CMD /home/streamer/bin/worker_app -config=/home/streamer/conf/worker_app_config.json
